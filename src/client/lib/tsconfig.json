{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "experimentalDecorators": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "$/*": ["./src/*"]
    },

    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 